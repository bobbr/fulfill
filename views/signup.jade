extends layouts/default

block script
	script(type='text/javascript', src='/views/signup.js')

block body
	div.ui.page.grid.segment
		div.ui.four.wide.column
		div.seven.wide.column

			div.ui.fluid.form
				h1.ui.dividing.header Sign Up

				div.field#signup_field_displayname
					label Pick a display name
					input#signup_displayname(type='text', placeholder='Fred Chien')
					div.ui.red.pointing.above.label.transition.hidden

				div.field#signup_field_email
					label Enter your Email
					input#signup_email(type='text', placeholder='fred@mandice.com')
					div.ui.red.pointing.above.label.transition.hidden

				div.field#signup_field_password
					label Type your password
					input#signup_password(type='password')
					div.ui.red.pointing.above.label.transition.hidden

				div.field#signup_field_confirm_password
					label Confirm password
					input#signup_confirm_password(type='password')
					div.ui.red.pointing.above.label.transition.hidden

				div.ui.purple.submit.button#signup_submit_btn Create an account
