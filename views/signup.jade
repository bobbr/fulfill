extends layouts/default

block script
	script(type='text/javascript', src='/views/signup.js')

block body
	div.ui.page.grid.segment
		div.ui.four.wide.column
		div.seven.wide.column

			div.ui.fluid.form
				h1.ui.dividing.header Sign Up

				div.field
					label Pick a display name
					input#signup_displayname(type='text', placeholder='displayname')

				div.field
					label Enter your Email
					input#signup_email(type='text', placeholder='fred@mandice.com')

				div.field
					label Type your password
					input#signup_password(type='password')

				div.field
					label Confirm password
					input#signup_confirm_password(type='password')

				div.ui.blue.submit.button#signup_submit_btn Create an account
