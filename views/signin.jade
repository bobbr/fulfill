extends layouts/default

block script
	script(type='text/javascript', src='/views/signin.js')

block body
	div.ui.page.grid.segment
		div.ui.four.wide.column
		div.seven.wide.column

			div.ui.fluid.form
				h1.ui.dividing.header Sign In

				div.field#signin_field_username
					label Username
					input#signin_username(type='text', placeholder='fred@mandice.com')
					div.ui.red.pointing.above.label.transition.hidden

				div.field#signin_field_password
					label Password
					input#signin_password(type='password')
					div.ui.red.pointing.above.label.transition.hidden

			div.ui.column.grid
				div.five.wide.column
					div.ui.blue.submit.button#signin_submit_btn Sign In

				div.eleven.wide.column
					div No account?
						!=' '
						a(href='/signup') Sign Up
					div Forget your password?
